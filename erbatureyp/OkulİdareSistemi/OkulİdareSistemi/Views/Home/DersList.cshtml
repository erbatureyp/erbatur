@model IEnumerable<OkulİdareSistemi.Models.Ders>
@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}
<a href="@Url.Action("DersAdd","Home")" class="btn btn-outline-danger">
    <i></i>Yeni Ders Ekle
</a>
<br />
<div>
    <div>
        <div>
            <div>
                <div></div>
                <table>
                    <thead>
                        <tr>
                            <th style="padding-left: 10px;color:red">
                                <span>DersId  </span>
                            </th>

                            <th style="padding-left:10px;color:red">
                                <span>DersAdi  </span>
                            </th>
                            <th style="padding-left: 10px;color:red">
                                <span>Kredisi  </span>
                            </th>
                            <th style="padding-left:10px;color:red">
                                <span>Öğretmeni  </span>
                            </th>
                            <th style="padding-left:10px;color:red">
                                <span>Action  </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            foreach (var ders in Model)
                            {
                                <tr>
                                    <td style="padding-left:10px">
                                        <div >
                                            @ders.DersId
                                        </div>
                                    </td>
                                    <td style="padding-left:10px">
                                        <div>
                                            @ders.DersAdi
                                        </div>
                                    </td>
                                    <td style="padding-left:10px">
                                        <div>
                                            @ders.Kredisi
                                        </div>
                                    </td>
                                    <td style="padding-left:10px">
                                        <div>
                                            @ders.OkulYonetim.AdSoyad
                                        </div>
                                    </td>
                                    <td style="padding-right:10px">
                                        <ul>
                                            <li>
                                                <a href="@Url.Action("DersEdit","Home", new {  id=ders.DersId  })" class="edit">
                                                    <span></span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("DersRemove","Home", new {  id=ders.DersId  })" class="remove">
                                                    <span></span>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">&nbsp;</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
