@model IEnumerable<OkulİdareSistemi.Models.OgrenciDers>
@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}
<a href="@Url.Action("OgrenciDersAdd","Home")" class="btn btn-outline-danger">
    <i></i>Yeni Ders Atama
</a>
<div>
    <div>
        <div>
            <div>
                <div id="filter-form-container"></div>
                <table>
                    <thead>
                        <tr>
                            <th style="padding:10px;color:red">
                                <span>Id</span>
                            </th>
                            <th style="padding:10px;color:red">
                                <span>Ders Adı</span>
                            </th>
                            <th style="padding:10px;color:red">
                                <span>Öğrenci</span>
                            </th>
                            <th style="padding:10px;color:red">
                                <span>Action</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            foreach (var ogrenciDers in Model)
                            {
                                <tr>
                                    <td>
                                        <div style="padding:10px">
                                            @ogrenciDers.OgrenciDersId
                                        </div>
                                    </td>
                                    <td>
                                        <div style="padding:10px">
                                            @ogrenciDers.Ders.DersAdi
                                        </div>
                                    </td>
                                    <td>
                                        <div style="padding:10px">
                                            @ogrenciDers.Ogrenci.AdSoyad
                                        </div>
                                    </td>
                                    <td style="padding:10px">
                                        <ul>
                                            <li>
                                                <a href="@Url.Action("OgrenciDersEdit","Home", new {  id=ogrenciDers.OgrenciDersId  })">
                                                    <span data-feather="edit"></span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("OgrenciDersRemove","Home", new {  id=ogrenciDers.OgrenciDersId  })">
                                                    <span data-feather="trash-2"></span>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">&nbsp;</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

